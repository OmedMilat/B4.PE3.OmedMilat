<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B4.PE3.OmedM.Views.MainView">

    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding GetLocation}"></Button>
            <ListView ItemsSource="{Binding Locations}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HeightRequest="50">
                                <Label Text="{Binding Latitude}" Margin="10,0,0,0"
                                       VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding Longitude}" Margin="10,0,0,0"
                                       VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>